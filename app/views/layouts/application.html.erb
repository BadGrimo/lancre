<!DOCTYPE html>
<html>
  <head>
    <title>Lancre</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <dev class="container">
      <%= render 'layouts/nav' %>
      
      <div class="content">
        <% if notice %>
          <p id="notice"><%= notice %></p>
        <% end %>

        <%= yield %>
      </div>
      
    </div>
  </body>
</html>
